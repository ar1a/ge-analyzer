%ul#group-dropdown.dropdown-content
  %li
    = link_to 'Barrows Items', barrows_items_path
  %li
    = link_to 'Zulrah', zulrah_path
  %li
    = link_to 'Potions', potions_path
  %li
    = link_to 'Ores', ores_path
.row
  = render 'search'
  .col.s12
    .card
      .card-content
        %span.card-title
          - if @search
            Search Results
            (
            = @items.count
            )
          - else
            Items
          %span.right
            %a.dropdown-btn.btn.green.darken-2{href: '#', 'data-activates' => 'group-dropdown'}
              Groups
              %i.material-icons.right arrow_drop_down
            = link_to 'Refresh', '', class: 'btn green darken-2'
        %br
        %ul.collapsible.popout{'data-collapsible': 'accordion'}
          - if @items.empty?
            Sorry, nothing found :(
          - else
            = render partial: 'preview', collection: @items, cached: true
