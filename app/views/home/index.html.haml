.row
  .col.s12.center
    %h2 Homepage
.row
  .col.s12
    .card
      .card-content
        %span.card-title Search
        = search_form_for @q, url: root_path do |f|
          = f.search_field :name_cont, placeholder: 'Search...'
  .col.s12
    .card
      .card-content
        %span.card-title Random Items
        %ul.collapsible.popout{'data-collapsible': 'accordion'}
          - if @items.empty?
            Sorry, nothing found :(
          - else
            = render partial: 'preview', collection: @items, cached: true
